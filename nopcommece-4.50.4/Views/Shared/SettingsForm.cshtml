@model CodeInjectorSettings


<form asp-controller="CodeInjector" asp-action="Configure">
	<div class="card card-default form-horizontal">
		<div class="card-body">
			<div class="search-body">
				<div class="row">
					<div class="col-md-6">
						<div class="form-group row">
							<div class="col-md-4">
								<nop-label asp-for="@Model.Debug" />
							</div>
							<div class="col-md-8">
								<nop-editor asp-for="@Model.Debug" />
							</div>
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="text-center col-12">
						<button type="submit" name="saveSettings" class="btn btn-primary">@T("Admin.Common.Save")</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
